<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="subject" class="com.logitopia.jmortar.core.service.mock.MockService">
      <constructor-arg>
        <value>MOCKSERVICE</value>
      </constructor-arg>
      <property name="initialiseOutcome" value="true"/>
      <property name="validateOutcome" value="true"/>
      <property name="startupOutcome" value="true"/>
      <property name="postStartOutcome" value="true"/>
    </bean>
</beans>
